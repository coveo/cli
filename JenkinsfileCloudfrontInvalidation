node('linux && docker') {
  checkout scm

  withDockerContainer(image: 'node:14', args: '-u=root') {

    withCredentials([
      [
        $class: "AmazonWebServicesCredentialsBinding",
        credentialsId: "CloudfrontCacheInvalidation",
      ]
    ]) {
      stage('Cloudfront invalidation') {
        sh 'node ./scripts/invalidate-cloudfront.js'
      }

    }
  }
}