{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/coveo/cli/blob/master/packages/cli/src/lib/snapshot/pullModelValidation/model.schema.json",
  "title": "SnapshotPullModel",
  "description": "A configuration to pull snaphots",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "resourcesToExport": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        ".*": {
          "type": ["array", "null"],
          "items": {
            "type": "string"
          }
        }
      }
    },
    "includeChildrenResources": {
      "type": "boolean"
    },
    "orgId": {
      "type": "string"
    }
  },
  "required": ["resourcesToExport"],
  "additionalProperties": true
}
