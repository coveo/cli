{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["ESNext"],
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2019",
    "noEmitOnError": false,

    "types": ["node", "jest"],
    "esModuleInterop": true
  },
  "include": ["src/**/*", "src/typings/**/*.d.ts"]
}
