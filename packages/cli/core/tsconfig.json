{
  "extends": "@coveo/cli-commons-dev/tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "lib",
    "types": ["node", "jest"],
    "paths": {
      "@coveo/cli-commons/*": ["../commons/src/*"],
      "@coveo/cli-commons-dev/*": ["../commons-dev/src/*"]
