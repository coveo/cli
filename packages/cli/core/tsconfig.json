{
  "extends": "@coveo/cli-commons-dev/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "outDir": "lib",
    "types": ["node", "jest"],
    "paths": {
      "@coveo/cli-commons/*": ["../commons/src/*"],
      "@coveo/cli-commons-dev/*": ["../commons-dev/src/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*", "src/typings/**/*.d.ts"]
}
