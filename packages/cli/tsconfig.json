{
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "Node16",
    "module": "Node16",
    "lib": ["ESNext"],
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "ESNext",
    "noEmitOnError": false,
    "skipLibCheck": true,
    "types": ["node", "jest"],
  },
  "include": ["src/**/*", "src/typings/**/*.d.ts"]
}
