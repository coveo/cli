{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "noEmitOnError": false,
    "skipLibCheck": true,
    "types": ["jest"],
    "esModuleInterop": true
  },
  "include": ["src/**/*", "src/typings/**/*.d.ts"]
}
