{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018"],
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es2018",
    "esModuleInterop": true,
    "module": "commonjs",
    "strict": true,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "types": ["jest"]
  },
  "include": ["./**/*.ts", "typings/**/*.d.ts"]
}
