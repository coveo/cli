{
    "$schema": "http://json-schema.org/schema",
    "id": "SchematicsCoveo",
    "title": "Coveo headless schematic",
    "type": "object",
    "properties": {
        "path": {
            "type": "string",
            "format": "path",
            "description": "The path to create the component.",
            "visible": false
        },
        "project": {
            "type": "string",
            "description": "The name of the project.",
            "$default": {
                "$source": "projectName"
            }
        },
        "orgId": {
            "type": "string",
            "description": "Your organisation ID"
        },
        "apiKey": {
            "type": "string",
            "description": "Your API Key"
        }
    },
    "required": [
        "orgId",
        "apiKey"
    ]
}