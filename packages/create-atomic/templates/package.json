{
  "name": "{{project}}",
  "description": "Coveo Atomic Project",
  "version": "0.1.0",
  "scripts": {
    "postinstall": "npm run setup-server && npm run setup-env && npm run setup-cleanup",
    "setup-server": "node ./scripts/setup-server.js",
    "setup-env": "node ./scripts/setup-env.js",
    "setup-cleanup": "node ./scripts/clean-up.js",
    "start-server": "node ./scripts/start-server.js",
    "start-app": "node ./scripts/start-app.js",
    "allocate-port": "node ./scripts/port-allocator.mjs",
    "start": "npm run allocate-port && concurrently --raw \"npm run start-server\" \"npm run start-app\""
  },
  "dependencies": {
    "@coveo/search-token-server": "latest",
    "serve-handler": "^6.1.3",
    "get-port": "^5.1.1",
    "dotenv": "10.0.0",
    "concurrently": "6.4.0"
  },
  "devDependencies": {
    "fs-extra": "10.0.0"
  }
}
